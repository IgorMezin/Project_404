@model KonohagoWebApp.Pages.ProfileModel
@{
}
<head>
    <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
<div class="container-fluid main" style="height:100vh;padding-left:0px;">

    <div class="d-block d-md-none menu">

        <div class="bar"></div>

    </div>

    <div class="row align-items-center" style="height:70%">
        <div class="col-md-12">

            <div class="container content clear-fix">

                <div class="row" style="height:100%">

                    <div class="col-md-3">

                        <!--                        <div href=# class="d-inline"><img src="https://image.flaticon.com/icons/svg/236/236831.svg" width=130px style="margin:0;"><br>-->
                        <!--                            <p class="pl-2 mt-2"><a href="#" class="btn" style="color:#8f9096;font-weight:600">Edit Picture</a></p></div>-->
                        <div href=# class="d-inline"><img src="https://image.flaticon.com/icons/svg/236/236831.svg" width=130px></div>
                        <p class="col-md-2">
                            <a href="#" class="btn" style="color:#8f9096;font-weight:600;">Edit Picture</a>
                        </p>
                    </div>

                    <div class="col-md-9">

                        <div class="container">

                            <form>

                                <div class="form-group">

                                    <label for=fullName>Имя пользователя</label>
                                    <input type="text" class="form-control" id="fullName">

                                </div>
                                <div class="form-group">

                                    <label for=email>Почта</label>
                                    <input type="email" class="form-control" id="email">

                                </div>
                                <div class="form-group">

                                    <label for=pass>Пароль</label>
                                    <input type="password" class="form-control" id="pass">

                                </div>
                                <div class="form-group ">

                                    <label for=birthday>Дата рождения</label>
                                    <input type="date" class="form-control" id="birthday">

                                </div>

                                <div class="row mt-5">

                                    <div class="col">

                                        <button type="button" class="btn btn-primary btn-block">Сохранить</button>

                                    </div>

                                    <div class="col">

                                        <button type="button" class="btn btn-default btn-block">Назад</button>

                                    </div>

                                </div>

                            </form>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

</div>
</body>